<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/styles.css">
  <link rel="stylesheet" href="/css/tables.css">
  <title><%= pageTitle %></title>
</head>

<body>
  <div class="main__container">
    <div class="hamburger">
      <div class="bars"></div>
      <div class="bars"></div>
      <div class="bars"></div>
  </div>
    <header>
      <%- include('../partials/sidebar.ejs') %>
    </header>

    <main>
      <section>
        <div class="container">
          <h1>Order System Goes Here</h1>
          <form action="/order/check" method="post">
            <input type="hidden" name="user_id" value="<%= user.id %>" />
            <input type="hidden" name="order_by" value="<%= user.full_name %>" />

            <table class="menu-display">
              <tr>
                <th>Food</th>
                <th>Price</th>
                <th class="row-action">Action</th>
              </tr>
              <% if(locals.data) { %>
                <% data.forEach(function(item) { %>
                <tr>
                    <input type="hidden" name="item_name_<%= item.id %>" value="<%= item.item_name %>" />
                    <input type="hidden" name="item_price_<%= item.id %>" value="<%= item.price %>" />
                    <input type="hidden" id="total_price_<%= item.id %>" name="total_price_<%= item.id %>" />
                    <td class="table-item"><%= item.item_name %></td>
                    <td class="table-item">₱<%= item.price %></td>
                    <td class="table-item action">
                      <input 
                        style="display: none" 
                        type="number" 
                        name="quantity_<%= item.item_name.replaceAll(' ', '_') %>" 
                        id="quantity_<%= item.id %>" 
                        oninput="updateTotal('quantity_<%= item.id %>', '<%= item.price %>', 'total_<%= item.id %>', 'total_price_<%= item.id %>', '<%= item.id %>')"
                      />
                      <span style="display: none;" id="total_<%= item.id %>">Total: ₱0</span>
                      <button id="button<%= item.id %>" type="button" onclick="toggleQuantity('quantity_<%= item.id %>', 'total_<%= item.id %>', 'total_price_<%= item.id %>', '<%= item.price %>', '<%= item.id %>')">Add to cart</button>
                    </td>
                </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td>No data</td>
                  <td>No data</td>
                  <td>No data</td>
                </tr>
              <% }%>
            </table>

            <button type="submit" onclick="this.disabled=true; this.form.submit();">Check Order</button>
          </form>
        </div>
      </section>
    </main>
  </div>

  <script src="js/toggleQuantity.js"></script>
</body>

</html>