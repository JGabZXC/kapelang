  </div>
  <% if(locals.profile) { %>
  <div class="profile">
    <p>Signed in as:</p>
    <% if(user.is_admin) { %>
    <p><strong>
        <%= profile.full_name %> (ADMIN)
      </strong></p>
    <% } else { %>
    <p><strong>
        <%= profile.full_name %>
      </strong></p>
    <%}%>
  </div>
    <% } %>
</div>

  <nav class="sidebar">
    <ul class="menu-list">
      <% if(locals.user?.is_admin) { %>
      <li class="default-topo list"><a href="/">Home</a></li>
      <li class="default-topo list"><a href="/menu">Menu</a></li>
      <li class="default-topo list"><a href="/menu-edit">Menu Dashboard</a></li>
      <% if(locals.login) {%>
      <li class="default-topo list"><a href="/profile">Profile</a></li>
