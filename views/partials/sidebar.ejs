      <% } else {%>
      <% if(pageTitle !=='Login' ) { %>
      <li class="default-topo list lastBtn"><a class='last-btn' href="/login">Login</a></li>
      <% } %>
      <% } %>
      <% } else { %>
      <li class="default-topo list"><a href="/">Home</a></li>
      <li class="default-topo list"><a href="/menu">Menu</a></li>
      <li class="default-topo list"><a href="/order">Order</a></li>
      <% if(locals.login) {%>
      <li class="default-topo list"><a href="/profile">Profile</a></li>
      <li class="default-topo list lastBtn"><a class='last-btn' href="/logout">Logout</a></li>
      <% } else {%>
      <% if(pageTitle !=='Login' ) { %>
      <li class="default-topo list lastBtn"><a class='last-btn' href="/login">Login</a></li>
      <% } %>
      <% } %>
      <% } %>


    </ul>
  </nav>

